          <xpath>/Defs/ThingDef[defName="VFE_AncientMech_AncientCarpenter"]/butcherProducts</xpath>
          <value>
            <butcherProducts>
              <Steel>50</Steel>
              <Plasteel>10</Plasteel>
              <ComponentIndustrial>2</ComponentIndustrial>
            </butcherProducts>
          </value>
        </li>
      </operations>
    </match>

  </Operation>
</Patch>
